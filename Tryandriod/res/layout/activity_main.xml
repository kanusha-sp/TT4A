<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/clientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Client Name" />

    <CheckBox
        android1:id="@+id/call1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_centerHorizontal="true"
        android1:layout_centerVertical="true"
        android1:text="Call" />

    <TextView
        android1:id="@+id/optionName1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/call1"
        android1:layout_alignBottom="@+id/call1"
        android1:text="optionName1" />

    <Button
        android1:id="@+id/submit"
        android1:layout_width="250dp"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_centerHorizontal="true"
        android1:layout_marginBottom="60dp"
        android1:text="Submit"
        android1:textSize="20dp" />

    <TextView
        android1:id="@+id/premium"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/textView3"
        android1:text="Premium" />

    <TextView
        android1:id="@+id/textView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/premium"
        android1:layout_alignParentLeft="true"
        android1:text="StockPrice" />

    <TextView
        android1:id="@+id/textView4"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignRight="@+id/call1"
        android1:layout_below="@+id/textView3"
        android1:layout_marginRight="21dp"
        android1:text="TextView" />

    <TextView
        android1:id="@+id/textView3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView4"
        android1:layout_below="@+id/clientName"
        android1:layout_marginTop="22dp"
        android1:text="TextView" />

    <CheckBox
        android1:id="@+id/call2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/call1"
        android1:layout_below="@+id/call1"
        android1:text="Call" />

    <CheckBox
        android1:id="@+id/put2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/call2"
        android1:layout_alignBottom="@+id/call2"
        android1:layout_alignLeft="@+id/put1"
        android1:text="Put" />

    <CheckBox
        android1:id="@+id/put1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/call1"
        android1:layout_alignBottom="@+id/call1"
        android1:layout_toRightOf="@+id/call2"
        android1:text="Put" />

    <TextView
        android1:id="@+id/optionName2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/call2"
        android1:layout_alignBottom="@+id/call2"
        android1:layout_alignParentLeft="true"
        android1:text="optionName2" />

</RelativeLayout>